{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": { "DEBUG": false },
  "rules": {
    "no-console": "off",
    "func-names": 0,
    "prettier/prettier": "error",
    "no-absolute-path": "off",
    "react/prop-types": 0,
    "prefer-template": "off",
    "react/no-array-index-key": "off",
    "react/jsx-boolean-value": "off",
    "react/jsx-curly-brace-presence": "off"
  }
}
